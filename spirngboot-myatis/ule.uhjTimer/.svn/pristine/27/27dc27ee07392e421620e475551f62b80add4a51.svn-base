<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ule.uhj</groupId>
	<artifactId>ule.uhjTimer</artifactId>
	<version>${env}-1.1.0.${scmVersion}</version>
	<packaging>jar</packaging>
	<name>ule.uhjTimer</name>
	<url>http://maven.apache.org</url>
	<scm>
		<connection>scm:svn:https://172.24.144.104/svn/eachnet/trunk/PostMall/ule.uhj/ule.uhjTimer</connection>
		<developerConnection>scm:svn:https://172.24.144.104/svn/eachnet/trunk/PostMall/ule.uhj/ule.uhjTimer</developerConnection>
		<url>https://172.24.144.104/svn/eachnet/trunk/PostMall/ule.uhj/ule.uhjTimer</url>
	</scm>
	<properties>
		<env>beta</env>
		<!-- <uhjCommonVer>591492</uhjCommonVer> -->
		<applyTransactApi>766846</applyTransactApi>
		<sldJavaVersion>766964</sldJavaVersion>
	</properties>
	
	<build>
		<resources>
            <resource>
                <directory>src/main/resources/${env}</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources/common</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
        </resources>
        <finalName>uhjTimer-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>com.ule.uhj.timer.Run</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assembly</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
	
	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
			<id>dev-central</id>
			<name>Ule Dev Dependent Repository</name>
			<layout>default</layout>
			<url>http://maven.${env}.ulechina.tom.com/artifactory/repo</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
		</repository>
	</repositories>
	
	<distributionManagement>
		<repository>
			<id>tom-maven-repository</id>
			<name>Tom Maven Repository</name>
			<url>http://maven.${env}.ulechina.tom.com/artifactory/libs-releases-local</url>
		</repository>
	</distributionManagement>
	
	<dependencies>
	<dependency>
		<groupId>com.ule.if.vpsLoan</groupId>
	    <artifactId>applyTransact-ejb-api</artifactId>
	     <version>${env}-1.1.0.${applyTransactApi}</version>		
		</dependency>
	  	<dependency>
            <groupId>com.ule.lab.wildfly</groupId>
            <artifactId>wildfly-basic-client</artifactId>
            <version>${env}-1.0.0</version>            
        </dependency>
	<!-- 	<dependency>
			<groupId>com.ule.uhj</groupId>
			<artifactId>ule.uhjCommon</artifactId>
			<version>${env}-1.1.0.${uhjCommonVer}</version>
		</dependency> -->
		<dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
        <!-- <dependency>
			<groupId>com.ule.jboss</groupId>
			<artifactId>HAJNDIContext</artifactId>
			<version>1.0.1</version>
		</dependency> -->
        <dependency>
			  <groupId>jbossClient</groupId>
             <artifactId>jbossClient</artifactId>
              <version>5.1.GA-compatible-with-wildfly</version> 
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5</version>
		</dependency>
		<!-- 项目依赖包 -->
		<dependency>
			<groupId>com.ule.uhj</groupId>
			<artifactId>sldJava</artifactId>
			<version>${env}-1.0.0-${sldJavaVersion}</version>
		</dependency>
	</dependencies>
</project>
